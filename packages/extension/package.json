{
  "name": "@tla/extension",
  "version": "1.3.3",
  "description": "TravianAssistant Chrome Extension",
  "private": true,
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "node ./scripts/version-manager.cjs sync && vite build --config vite.config.ts",
    "clean": "rm -rf dist",
    "test": "vitest",
    "version:patch": "npm version patch && node ./scripts/version-manager.cjs sync",
    "version:minor": "npm version minor && node ./scripts/version-manager.cjs sync",
    "version:major": "npm version major && node ./scripts/version-manager.cjs sync"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/node": "^20.11.5",
    "typescript": "^5.3.3",
    "vite": "^5.4.2",
    "vite-plugin-static-copy": "^1.0.5",
    "vitest": "^1.2.1"
  }
}