{
  "manifest_version": 3,
  "name": "TravianAssistant",
  "version": "0.5.2",
  "description": "AI-powered strategic advisor for Travian Legends",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.travian.com/*",
    "https://travian-proxy.vercel.app/*"
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.travian.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content.css",
        "*.png"
      ],
      "matches": [
        "*://*.travian.com/*"
      ]
    }
  ]
}