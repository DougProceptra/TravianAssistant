{
  "manifest_version": 3,
  "name": "Travian Legends Assistant",
  "version": "0.2.4",
  "description": "Lightweight HUD and data scraper for Travian Legends.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.travian.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.travian.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "options_page": "src/options/index.html",
  "action": {
    "default_title": "TLA"
  }
}