{
  "manifest_version": 3,
  "name": "Travian Legends Assistant",
  "version": "0.4.0",
  "description": "AI-powered strategic advisor for Travian Legends with multi-village support",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.travian.com/*",
    "https://travian-proxy-simple.vercel.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.travian.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "options_page": "src/options/index.html",
  "action": {
    "default_title": "TLA v0.4.0"
  }
}