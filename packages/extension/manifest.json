{
  "manifest_version": 3,
  "name": "Travian Legends Assistant",
  "version": "0.2.9",
  "description": "AI-powered assistant for Travian Legends with intelligent recommendations.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.travian.com/*",
    "https://api.anthropic.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.travian.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "options_page": "src/options/index.html",
  "action": {
    "default_title": "Travian AI Assistant",
    "default_popup": "src/options/index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
