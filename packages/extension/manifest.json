{
  "manifest_version": 3,
  "name": "TravianAssistant V3",
  "version": "1.0.4",
  "description": "AI-powered strategic advisor for Travian Legends with Kirilloid-accurate formulas and server speed support",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.travian.com/*",
    "https://travian-proxy-simple.vercel.app/*",
    "https://travian-proxy.vercel.app/*",
    "https://TravianAssistant.dougdostal.replit.dev/*",
    "wss://TravianAssistant.dougdostal.replit.dev/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.travian.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content.css",
        "options/*",
        "*.png"
      ],
      "matches": [
        "*://*.travian.com/*"
      ]
    }
  ]
}