{
  "manifest_version": 3,
  "name": "Travian Assistant V3",
  "version": "3.0.0",
  "description": "AI-powered strategic advisor for Travian Legends",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "*://*.travian.com/*",
    "*://*.travian.de/*",
    "*://*.travian.fr/*",
    "*://*.travian.it/*",
    "*://*.travian.org/*",
    "*://*.travian.net/*",
    "*://*.travian.nl/*",
    "*://*.travian.co.uk/*",
    "*://*.travian.us/*",
    "*://*.travian.com.br/*",
    "https://*.replit.app/*",
    "http://localhost:3000/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [{
    "matches": [
      "*://*.travian.com/*",
      "*://*.travian.de/*",
      "*://*.travian.fr/*",
      "*://*.travian.it/*",
      "*://*.travian.org/*",
      "*://*.travian.net/*",
      "*://*.travian.nl/*",
      "*://*.travian.co.uk/*",
      "*://*.travian.us/*",
      "*://*.travian.com.br/*"
    ],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_idle"
  }],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [{
    "resources": ["icons/*", "styles.css"],
    "matches": ["<all_urls>"]
  }]
}
